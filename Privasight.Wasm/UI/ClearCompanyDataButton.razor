@using Privasight.Wasm.Services

@inject DataService _dataService
@inject NotificationService _notificationService

<RadzenButton class="@Class"
              Text="Delete Loaded Facebook Data"
              ButtonStyle="ButtonStyle.Danger"
              Click="@RemoveFbData"/>

@code {
	[Parameter, EditorRequired]
	public AvailableCompany Company { get; set; }

	[Parameter]
	public string Class { get; set; } = "";

	public async Task RemoveFbData()
	{
		await _dataService.RemoveCompanyData(Company);
		_notificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Success, Summary = "Facebook Data Removed Successfully", Duration = 4000 });
	}
}