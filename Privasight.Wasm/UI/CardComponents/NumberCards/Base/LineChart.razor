@using Privasight.Model.Shared.Display

<RadzenChart class="@Class">
	<RadzenLineSeries Data="@Items" Title="@Title"
	                  ValueProperty="Number" CategoryProperty="Date">
		<RadzenMarkers MarkerType="MarkerType.Square" />
	</RadzenLineSeries>	
	<RadzenLegend Visible="false" />
	<RadzenCategoryAxis Visible="false"/>
	<RadzenValueAxis Visible="false"/>
</RadzenChart>

@code {
	[Parameter]
	public IEnumerable<LineChartItem>? Items { get; set; }
	
	[Parameter]
	public string? Title { get; set; }

	[Parameter]
	public string Class { get; set; } = "col-md-7 col-lg-8 h-100";
}
