@inject DialogService _dialogService

@using Decrypt.Model.Shared.Interfaces

@typeparam TItem 

<NumberCardWithOnclick Title="@SingleListFile.Title"
                           Number="SingleListFile.Items?.Count() ?? 0"
                           OnClickFunc="ShowTableDialog"/>

@code {

    [Parameter]
	public ISingleListFile<TItem> SingleListFile { get; set; } = null!;

	private async Task ShowTableDialog()
	{
		await _dialogService.OpenAsync<DialogDataTable<TItem>>(SingleListFile.Title,
			new Dictionary<string, object>
			{ { nameof(DialogDataTable<TItem>.Items), 
				SingleListFile.Items ?? Array.Empty<TItem>() },
				{ nameof(DialogDataTable<TItem>.Description), SingleListFile.Description }
			},
			new DialogOptions { Width = "90%", Height = "90%", Resizable = true });
		
		
	}
}
